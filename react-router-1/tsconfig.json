{
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "importHelpers": true,
    "pretty": true
  }
}
